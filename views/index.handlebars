{{!-- Header --}}
<div class="container">

    <h1 id="title">Burger Bar</h1>
    <img id="burgericon" src="assets/img/burgericon.jpg">

</div>

{{!-- Menus --}}
<br>

<div class="container" id="burgerTable">
    <div class="row">
        <div class="col-sm">
            <h3>Burger Menu</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button class="changetoDevour" data-id="{{id}}" data-devournow="{{devoured}}">
                        Devour It!
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h3>Devoured Burgers</h3>
            {{#each burgers}}
            {{#if devoured}}
            <li>
                {{burger_name}}
            </li>
            {{/if}}
            {{/each}}
        </div>
    </div>
</div>

<br>

<div class="container" id="burgerEntry">
    <h2>Create A Burger</h2>
    <form class="create-form">
        <div class="form-group">
            <label for="bu"> Enter Burger Name: </label>
            <input type="text" id="bu" name="name">
        </div>

        <button type="submit">Submit</button>
    </form>
    </div>
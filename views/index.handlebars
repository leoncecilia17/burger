{{!-- Header --}}
<div class="container">

    <img id="burgericon" src="assets/img/burgericon.jpg">

    <h1 id="title">Burger Bar</h1>
</div>

{{!-- Left Hand Menu --}}

<div class="container">
    <div class="row">
        <div class="col-sm">
            <h3>Burger Menu</h3>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    {{burger_name}}
                    <button class="changetoDevour" data-id="{{id}}" data-devournow="{{devoured}}">
                        Devour It!
                    </button>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-sm">
            <h3>Burger's That You Have Ate</h3>
            {{#each burgers}}
            {{#if devoured}}
                <li>
                    {{burger_name}}
                </li>
            {{/if}}
            {{/each}}

            <h2>Add A Burger</h2>
            <form class="create-form">
                <div class="form-group">
                    <label for="bu"> Burger Name: </label>
                    <input type="text" id="bu" name="name">
                </div>

                <button type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>